<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Watchlist" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/backgroundColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="backgroundColor">@color/backgroundColor</item>

        <item name="android:spinnerItemStyle">@style/SortingSpinnerItemStyle</item>
    </style>


    <style name="TitleText" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="ImageRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>

    <style name="SortingSpinnerItemStyle" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="DetailsLabelTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="DetailsTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>



</resources>